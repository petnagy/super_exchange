<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:plot="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.petnagy.superexchange.pages.fragments.history.viewmodel.HistoryViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="HistoryLayout">

        <com.androidplot.xy.XYPlot
            android:id="@+id/history_chart"
            style="@style/APDefacto.Dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            plot:lineLabels="left|bottom" />
    </LinearLayout>

</layout>
